<br><br><br>
<% if logged_in? %>
<div class="container">
  <div class="row">
    <aside class="col-xs-6">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
  
<% end %>

    <div class="col-xs-6">
      <% if current_user.posts.any? %>
        <h3>Posts (<%= current_user.posts.count %>)</h3>
        <ol class="microposts">
            <%= render current_user.posts %>
        </ol>
      <% end %>
    </div>
  </div>
</div>