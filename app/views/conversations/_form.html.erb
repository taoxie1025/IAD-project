<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label :recipients %>
      <% if @receiptient.present? %>
        <%= f.select(:recipients, @receiptient.all.collect {|p| [ p.name, p.id ] }, {}, { multiple: true , class: "chosen-select form-control" })%>
      <% else %>
        <%= f.text_field :receiptient, placeholder: "Enter recipients", class: "form-control" %>
      <% end %>
    </div>
      
    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, :value => @subject.to_s, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4  %>
    </div>

    <%= f.submit "Send Message", class: "btn btn-success" %>

<% end %>